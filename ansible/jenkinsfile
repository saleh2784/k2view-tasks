pipeline {
    agent any
    
    // parameters {
    //     choice (name: 'proccess', choices: ['install', 'uninstall'],)
    // }

    stages {
        stage('Print Build Number') {
            steps {
                script {
                    echo "my Build number is : ${BUILD_NUMBER}"
                }
            }
        }
        
        stage('Get SCM') {
            steps {
                git branch: "main", url: 'https://github.com/saleh2784/k2view-tasks.git'
            }
        }
        
        stage('procees to vim') {

			steps {
			    ansiblePlaybook(
                installation:'ansible',
                // limit:'',
                //playbook: "ansible/vim_${params.name}.yml",
                // playbook: "ansible/vim_install.yml",
                playbook: "/tmp/install-vim.yml",
                inventory: "/etc/ansible/hosts",
                become: 'yes',
                extras: '-vvv',
                // inventory: "ansible/host.ini",
                // forks: 1
                disableHostKeyChecking: true,
                credentialsId: 'ssh',
                colorized: true
          )
			}
		}


    }

}
